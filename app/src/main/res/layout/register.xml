<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/picture1"
    tools:context=".MainActivity">
    <ImageView
    android:id="@+id/btn_title"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:src="@mipmap/linkedoutlogo"/>
    <ImageView
        android:id="@+id/btn_exit"
        android:layout_width="35dp"
        android:layout_alignParentRight="true"
        android:layout_height="32dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/left_edit"/>
    <ImageView
        android:id="@+id/view"
        android:layout_below="@+id/btn_title"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/bt_reg"></ImageView>
    <EditText
        android:id="@+id/et_username"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:background="@drawable/bg_edittext"
        android:hint="UserName"
        android:paddingLeft="5dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:id="@+id/ll_yanzheng"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_username"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:background="@drawable/bg_edittext"
            android:hint="Password"
            android:password="true"
            android:paddingLeft="5dp"
            android:layout_height="50dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_phone_yanzheng"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_yanzheng"
        android:layout_marginLeft="10dp">
        <EditText
            android:id="@+id/et_qr_pwd"
            android:layout_width="fill_parent"
            android:layout_weight="2"
            android:textSize="20sp"
            android:password="true"
            android:background="@drawable/bg_edittext"
            android:hint="Confirm Password"
            android:paddingLeft="5dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_phone"
        android:layout_below="@+id/ll_phone_yanzheng"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:background="@drawable/bg_edittext"
        android:hint="Phone number"
        android:paddingLeft="5dp"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/et_mail"
        android:layout_below="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:background="@drawable/bg_edittext"
        android:hint="Mailbox"
        android:paddingLeft="5dp"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/btn_reg"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_mail"
        android:text="egister"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:background="#3491f0"
        android:textSize="20sp"/>

</RelativeLayout>
